{
    "plugins": [
        "@typescript-eslint",
        "prettier", 
        "import"
    ],
    "extends": [
        "airbnb-base", 
        "plugin:import/recommended", 
        "plugin:import/typescript",
        "plugin:prettier/recommended", 
        "prettier" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "no-shadow": "off",
        "no-unused-vars": "off",
        "class-methods-use-this": "off",
        "no-import-assign": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ]
    }
}
